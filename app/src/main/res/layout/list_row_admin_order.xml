<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvLineNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:textSize="16dp"
                android:text="1."/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Mã ĐH:"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tvOrderId"
                android:text="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_delete_28"
                android:text="Xóa" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Ngày đặt:"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tvOrderDate"
                android:text="20/2/2021"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_edit_28" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"></TextView>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Nguyễn Văn A"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="70dp"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"></TextView>

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="4.000.000 đ"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Chờ xử lý"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
