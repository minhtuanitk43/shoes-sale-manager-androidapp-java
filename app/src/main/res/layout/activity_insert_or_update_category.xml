<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GUI.Admin.InsertOrUpdateUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/orange"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_28"></ImageView>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/them_category"
                android:textSize="20dp"
                android:textColor="@color/white"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="right"
            style="@style/insert_row_linearLayout">
            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_edit_28"
                android:layout_marginRight="5dp">
            </Button>
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_delete_28"
                android:layout_marginRight="5dp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnlId"
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="ID:">
                </TextView>
                <TextView
                    android:id="@+id/tvCategoryId"
                    style="@style/insert_row_editText_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Tên:">
                </TextView>
                <EditText
                    android:id="@+id/edtCategoryName"
                    android:focusable="false"
                    style="@style/insert_row_editText_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Từ khóa tìm:">
                </TextView>
                <EditText
                    android:focusable="false"
                    android:id="@+id/edtCategoryKeySearch"
                    style="@style/insert_row_editText_content"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:minLines="1"
                    android:gravity="top|start"
                    android:maxLines="5"
                    android:scrollbars="vertical">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlCreatedDate"
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Ngày tạo:">
                </TextView>
                <TextView
                    android:id="@+id/tvCategoryCreatedDate"
                    style="@style/insert_row_editText_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlCreatedBy"
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Người tạo:">
                </TextView>
                <TextView
                    android:id="@+id/tvCategoryCreatedBy"
                    style="@style/insert_row_editText_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlModifiedDate"
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Ngày sửa:">
                </TextView>
                <TextView
                    android:id="@+id/tvCategoryModifiedDate"
                    style="@style/insert_row_editText_content">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlModifiedBy"
                style="@style/insert_row_linearLayout">
                <TextView
                    style="@style/insert_row_textView_name"
                    android:text="Người sửa:">
                </TextView>
                <TextView
                    android:id="@+id/tvCategoryMOdifiedBy"
                    style="@style/insert_row_editText_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="right"
                style="@style/insert_row_linearLayout">
                <Button
                    android:id="@+id/btn_insertOrUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Thêm mới">
                </Button>
                <Button
                    android:id="@+id/btn_refresh"
                    android:layout_width="wrap_content"
                    android:text="Nhập lại"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
