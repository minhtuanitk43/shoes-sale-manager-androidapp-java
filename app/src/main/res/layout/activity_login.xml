<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/orange"
    android:paddingBottom="10dp"
    tools:context=".GUI.Common.LoginActivity">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_login"
        android:padding="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="50dp"
            android:text="Đăng nhập">

        </TextView>
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            app:backgroundTint="@color/orange"
            android:drawableRight="@drawable/username_icon"
            android:textColorHint="@color/gray"
            android:textSize="20dp"></EditText>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            app:backgroundTint="@color/orange"
            android:drawableRight="@drawable/password_icon"
            android:password="true"
            android:textColorHint="@color/gray"
            android:textSize="20dp"></EditText>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/orange"
            android:textColor="@color/light"
            android:text="Login"
            android:textSize="24dp"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:layout_marginTop="15dp">

        </Button>
        <TextView
            android:id="@+id/tvNotLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:gravity="right"
            android:text="Đăng nhập sau"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:layout_width="70dp"
                android:layout_height="2px"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/cardview_dark_background"
                android:layout_margin="25dp"></TextView>
            <View
                android:layout_width="70dp"
                android:layout_height="2px"
                android:background="@color/orange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:drawableLeft="@drawable/fb"
                android:textColor="@color/cardview_dark_background"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="10dp">
            </Button>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Google"
                android:drawableLeft="@drawable/gg"
                android:textColor="@color/cardview_dark_background"
                android:backgroundTint="@color/gray"
                >
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản ?"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginRight="10dp">
            </TextView>
            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="italic"
                android:text="@string/link">
            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView"
        android:layout_width="228dp"
        android:layout_height="41dp"
        android:text="1996 STORE"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="21dp"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="57dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>