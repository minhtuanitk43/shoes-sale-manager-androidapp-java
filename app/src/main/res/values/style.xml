<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Title bar-->
    <style name="title_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/orange</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="title_imageView_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_ios_28</item>
    </style>
    <style name="title_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Item Manager-->
    <style name="item_manager_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="item_manager_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!--Item Insert Product-->
    <style name="insert_row_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="insert_row_textView_name">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="insert_row_editText_content">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Product Detail-->
    <style name="detail_linearLayout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="detail_row_textView_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <!--Image Product-->
    <style name="img_product">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:background">@drawable/ic_baseline_image_24</item>
    </style>

    <!--Register-->
    <style name="register_row_texView">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="order_detail_linearLayout">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>